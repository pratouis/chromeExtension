{
  "name": "Dewey Chrome Extension",
  "permissions": ["storage"],
  "version": "1.0",
  "description": "A simple tool for better media research.",
  "content_scripts": [{
    "matches": [
      "https://*.twitter.com/**",
      "https://*.reddit.com/**"
    ],
    "css": [
      "bootstrap.min.css",
      "content.css",
      "twitter.css"
    ],
    "js": [
      "reddit.js",
      "content.js",
      "twitter.js"
    ],
    "run_at": "document_end"
    }],
    "icons": {
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "background": {
      "scripts": ["eventPage.js"],
      "persistent": false
    },
    "options_ui": {
      "page": "options.html",
      "chrome_style": true
    },
    "browser_action": {
      "default_title": "Dewey",
      "default_popup": "options.html"
    },
    "manifest_version": 2
}
